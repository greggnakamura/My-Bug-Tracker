@model IEnumerable<MyBugTracker.Bug>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Issue)
                    <form class="navbar-form navbar-right">
                        <input type="text" class="form-control" placeholder="Search...">
                    </form>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tag)
                </th>
                <th>
                    &nbsp;
                </th>  
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Issue)
        </td>
            @if (item.Status == "Resolved")
            {
                <td class="resolved">
                    <span>✔</span>
                </td>
            }
            else
            {
                <td>
                    &nbsp;
                </td>
            }
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BugId }, new { @class = "btn btn-primary btn-xs" }) 
            @Html.ActionLink("Details", "Details", new { id = item.BugId }, new { @class = "btn btn-info btn-xs" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.BugId }, new { @class = "btn btn-link btn-xs" })
        </td>
    </tr>
}
        </tbody>
    </table>
</div>